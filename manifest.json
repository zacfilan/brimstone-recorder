{
  "name": "Brimstone",
  "description": "Record and play Brimstone pixel-perfect webpage automation tests",
  "version": "1.5.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "debugger"
  ],
  "host_permissions": [
    "*://*/",
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "32": "images/grey_b_32.png"
    },
    "default_title": "Brimstone is inactive.\nClick to open window."
  },
  "icons": {
    "128": "images/orange_b_128.png"
  },
  "options_page": "options_ui.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "recorder.js"
      ],
      "run_at": "document_start"
    }
  ]
}