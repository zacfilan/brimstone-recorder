{
  "name": "Brimstone Recorder",
  "description": "Record user actions to create a Brimstone script",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage", 
    "activeTab",
    "scripting",
    "webNavigation",
    "debugger"
  ],
  "host_permissions": [
    "*://*/",
    "<all_urls>"
  ],
  "action" : {
    "default_title": "Click to open window"
  }
}